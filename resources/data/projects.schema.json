{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProjectsData",
  "type": "object",
  "properties": {
    "wrappers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "type", "status"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "type": { "const": "wrapper" },
          "status": { "enum": ["in_progress", "completed"] }
        }
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id","name","type","status","owner",
          "start_date","end_date"
        ],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "type": { "const": "project" },
          "status": { "enum": ["in_progress", "completed"] },
          "wrapper_id": { "type": ["string","null"] },
          "owner": { "type": "string" },
          "start_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
          "end_date":   { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
          "notes": { "type": "string" }
        }
      }
    }
  },
  "required": ["wrappers", "projects"]
}
